{
  "button": {
    "icon": {
      "spacing": {
        "value": "{spacing.base.8.value}"
      }
    },

    "corners": {
      "pill": {
        "border-radius": { "value": "{brand.border.radius.value}" }
      },
      "rounded": {
        "border-radius": { "value": "{border.base.radius.sm.value}" }
      }
    },
    "font-family": { "value": "{brand.font-family.regular.value}" },

    "small": {
      "padding-vertical": { "value": "{spacing.base.4.value}" },
      "padding-horizontal": { "value": "{spacing.base.8.value}" },
      "font-weight": { "value": "{typography.font-weight.regular.value}" },
      "line-height": { "value": "{typography.line-height.20.value}" },
      "font-size": { "value": "{typography.font-size.14.value}" },
      "icon-size": { "value": "{spacing.base.12.value}" }
    },

    "medium": {
      "padding-vertical": { "value": "{spacing.base.8.value}" },
      "padding-horizontal": { "value": "{spacing.base.12.value}" },
      "font-size": { "value": "{typography.font-size.16.value}" },
      "line-height": { "value": "{typography.line-height.24.value}" },
      "font-weight": { "value": "{typography.font-weight.semi-bold.value}" },
      "icon-size": { "value": "{spacing.base.16.value}" }
    },

    "large": {
      "padding-vertical": { "value": "{spacing.base.12.value}" },
      "padding-horizontal": { "value": "{spacing.base.24.value}" },
      "line-height": { "value": "{typography.line-height.32.value}" },
      "font-size": { "value": "{typography.font-size.20.value}" },
      "font-weight": { "value": "{typography.font-weight.semi-bold.value}" },
      "icon-size": { "value": "{spacing.base.24.value}" }
    },

    "disabled": {
      "color": { "value": "{color.base.grey.200.value}" }
    },

    "variant": {
      "primary": {
        "background-color": { "value": "{brand.color.primary.value}" },
        "color": { "value": "{color.base.white.value}" },

        "pressed": {
          "background-color": { "value": "{color.base.black.value}" }
        },
        "disabled": {
          "background-color": { "value": "{color.base.grey.100.value}" }
        }
      },

      "secondary": {
        "background-color": { "value": "{brand.color.secondary.value}" },
        "color": { "value": "{color.base.gravitas.value}" },

        "pressed": {
          "background-color": { "value": "{color.base.green.600.value}" }
        },
        "disabled": {
          "background-color": { "value": "{color.base.green.400.value}" }
        }
      },

      "outline-primary": {
        "border": {
          "width": { "value": "{border.base.width.sm}" },
          "color": { "value": "{color.base.gravitas.value}" }
        },
        "background-color": { "value": "{color.base.white.value}" },
        "color": { "value": "{color.base.gravitas.value}" },

        "pressed": {
          "background-color": { "value": "{color.base.gravitas.value}" },
          "color": { "value": "{color.base.white.value}" }
        },

        "disabled": {
          "background-color": { "value": "{color.base.grey.100.value}" },
          "color": { "value": "{color.base.grey.200.value}" },
          "border-color": { "value": "{color.base.grey.200.value}" }
        }
      }
    }
  }
}
