{
  "toast": {
    "padding": { "value": "{spacing.base.12.value}" },
    "color": { "value": "{brand.color.primary.value}" },
    "elevation": { "value": "{shadow.base.elevation.sm.value}" },

    "status": {
      "size": { "value": "{typography.font-size.16.value}" },

      "info": {
        "background-color": {
          "value": "{brand.color.secondary.100.value}"
        },

        "icon": {
          "color": { "value": "{brand.color.primary.value}" }
        }
      },
      "success": {
        "background-color": {
          "value": "{color.semantics.success.300.value}"
        },

        "icon": {
          "color": { "value": "{color.semantics.success.100.value}" }
        }
      },
      "warning": {
        "background-color": {
          "value": "{color.semantics.warning.300.value}"
        },

        "icon": {
          "color": { "value": "{color.semantics.warning.200.value}" }
        }
      },
      "error": {
        "background-color": {
          "value": "{color.semantics.warning.300.value}"
        },

        "icon": {
          "color": { "value": "{color.semantics.error.100.value}" }
        }
      }
    },

    "close-icon": {
      "height": { "value": "{typography.font-size.14.value}" },
      "width": { "value": "{typography.font-size.14.value}" },
      "color": { "value": "{brand.color.primary.value}" }
    }
  }
}
