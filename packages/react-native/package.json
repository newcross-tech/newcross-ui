{
  "name": "@newcross-ui/react-native",
  "version": "1.1.2",
  "description": "Components for react native apps",
  "author": "itdev@newcrosshealthcare.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/newcrossdev/newcross-ui.git"
  },
  "bugs": {
    "url": "https://bitbucket.org/newcrossdev/newcross-ui/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "react-native": "src/index.ts",
  "types": "build/esm/index.d.ts",
  "files": [
    "build",
    "src"
  ],
  "scripts": {
    "prebuild": "rm -rf build",
    "build:esm": "tsc --outDir build/esm",
    "build:cjs": "tsc --module commonjs --outDir build/cjs",
    "build": "yarn build:cjs && yarn build:esm",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.63.0"
  }
}
