{
  "name": "newcross-ui",
  "private": true,
  "workspaces": [
    "packages/*",
    "stories/*"
  ],
  "description": "Design system for Newcross Healthcare",
  "author": "itdev@newcrosshealthcare.com",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-native": "^4.0.4",
    "@testing-library/react-native": "^9.0.0",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-native": "^0.67.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "metro-react-native-babel-preset": "^0.69.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-native": "^0.67.3",
    "react-native-web": "^0.17.7",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "lint:check": "eslint '**/*.{ts,tsx,json}'",
    "lint:fix": "eslint --fix '**/*.{ts,tsx,json}'",
    "format:check": "prettier --check '**/*.{ts,tsx,json}'",
    "format": "prettier --write '**/*.{ts,tsx,json}'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "yarn format:check",
      "yarn lint:check"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
