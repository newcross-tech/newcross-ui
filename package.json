  "scripts": {
    "lint:check": "eslint '**/*.{ts,tsx,json}'",
    "lint:fix": "_() { eslint --fix ${@:-'**/*.{ts,tsx,json}'}; }; _",
    "format:check": "prettier --check '**/*.{ts,tsx,json}'",
    "format": "_() { prettier --write ${@:-'**/*.{ts,tsx,json}'}; }; _",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch --parallel",
    "build-storybook": "build-storybook",
    "test": "lerna run test --stream --concurrency 1 --since $npm_config_branch",
    "test:coverage": "lerna run test:coverage",
    "typecheck": "lerna run typecheck --parallel",
    "deploy": "sls deploy -s production",
    "deploy:acceptance": "sls deploy -s acceptance"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "yarn format",
      "yarn lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
